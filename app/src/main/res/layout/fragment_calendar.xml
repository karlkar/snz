<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/adView"
    android:layout_centerHorizontal="true"
    android:scrollbars="none"
    android:id="@+id/calendarScrollView">

    <LinearLayout
        android:layout_width="@dimen/main_middle_bar_width"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calendarTop"
            android:gravity="center">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:gravity="center"
                android:id="@+id/caledarArrowLeft"
                fontPath="fonts/Amatic-Bold.ttf"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendarHeader"
                fontPath="fonts/Amatic-Bold.ttf"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="&gt;"
                android:gravity="center"
                android:id="@+id/caledarArrowRight"
                fontPath="fonts/Amatic-Bold.ttf"
                android:textSize="30sp"/>

        </LinearLayout>

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:mcv_showOtherDates="all"
            app:mcv_dateTextAppearance="@style/CustomTextAppearance"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/fruits_capitals"
                    fontPath="fonts/Amatic-Bold.ttf"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="match_parent"
                    style="@style/TableDivider"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/vegetables_capitals"
                    fontPath="fonts/Amatic-Bold.ttf"
                    android:textSize="30sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/TableDivider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.karol.sezonnazdrowie.ExpandableGridView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/fruitsGridView"
                    android:gravity="center"
                    android:numColumns="2"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/TableDivider"/>

                <com.karol.sezonnazdrowie.ExpandableGridView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/vegetablesGridView"
                    android:layout_gravity="center"
                    android:numColumns="2"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
