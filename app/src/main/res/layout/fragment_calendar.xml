<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    android:layout_gravity="center_horizontal">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="@dimen/main_middle_bar_width"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calendarTop"
                android:gravity="center"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="&lt;"
                    android:gravity="center"
                    android:id="@+id/caledarArrowLeft"
                    fontPath="fonts/Amatic-Bold.ttf"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calendarHeader"
                    fontPath="fonts/Amatic-Bold.ttf"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="&gt;"
                    android:gravity="center"
                    android:id="@+id/caledarArrowRight"
                    fontPath="fonts/Amatic-Bold.ttf"
                    android:textSize="30sp"/>

            </LinearLayout>

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="@dimen/main_middle_bar_width"
                android:layout_height="wrap_content"
                app:mcv_showOtherDates="all"
                app:mcv_dateTextAppearance="@style/CustomTextAppearance"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="@dimen/main_middle_bar_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/fruits_capitals"
                fontPath="fonts/Amatic-Bold.ttf"
                android:textSize="30sp"/>

            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                style="@style/TableDivider"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/vegetables_capitals"
                fontPath="fonts/Amatic-Bold.ttf"
                android:textSize="30sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            style="@style/TableDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/fruitsRecyclerView"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                style="@style/TableDivider"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/vegetablesRecyclerView"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </LinearLayout>
    </LinearLayout>
    <!--</LinearLayout>-->

</android.support.design.widget.CoordinatorLayout>