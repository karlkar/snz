<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal"
    tools:context="com.karol.sezonnazdrowie.view.MainActivity">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <LinearLayout
            android:id="@+id/whiteStripe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:background="@android:color/white"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateTextView"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/current_season"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/fruitsBtn"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_button_height"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_turquis"
                android:stateListAnimator="@null"
                android:text="@string/fruits_btn"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/vegetablesBtn"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_button_height"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_green"
                android:stateListAnimator="@null"
                android:text="@string/vegetables_btn"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:id="@+id/mainLogoImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_logo"
                android:src="@drawable/truskawka1" />

            <Button
                android:id="@+id/incomingSeasonBtn"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_button_height"
                android:background="@drawable/button_turquis"
                android:stateListAnimator="@null"
                android:text="@string/incoming_season_btn"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/calendarBtn"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_button_height"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_green"
                android:stateListAnimator="@null"
                android:text="@string/calendar_btn"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/shopListBtn"
                fontPath="fonts/Amatic-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_button_height"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_green"
                android:stateListAnimator="@null"
                android:text="@string/shopping_list_btn"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </FrameLayout>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
